                            if (item.ActRole == "_reviewer") sb.Append(RenderMenuControl("검토", "addUser", "검토", item.ActivityID, vPartType[0]));
                            else if (item.ActRole == "_confirmor") sb.Append(RenderMenuControl("확인", "addUser", "확인", item.ActivityID, vPartType[0]));

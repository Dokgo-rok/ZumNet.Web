                //this.phAttributePart.Visible = true;
                //string strAttName = ZumNet.Framework.Entities.Flow.ProcessStateChart.ParsingBizRole(item.BizRole).Substring(0, 2);
                //if (vPartType[0] == "u") strAttName += "자";

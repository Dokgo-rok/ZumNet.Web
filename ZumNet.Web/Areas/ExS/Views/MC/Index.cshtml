@functions{
    int _stdYear = 0;
    int _stdMonth = 0;

    private string GetQueryString(string m, string page, string ttl, string appId)
    {
        return "?qi=" + ZumNet.Framework.Util.SecurityHelper.ToBase64("{M:\"" + m + "\",ct:\"" + ViewBag.R.ct + "\",ctalias:\"" + ViewBag.R.ctalias + "\",ttl:\"" + ttl + "\",opnode:\"\",ft:\"" + page + "\",appid:\"" + appId + "\"}");
    }

    private string RenderMenu(string formTable, DataSet ds)
    {
        StringBuilder sb = new StringBuilder();
        //sb.Append("<ul class=\"nav justify-content-end\">");

        if (formTable == "CostList" || formTable == "StdTime")
        {
            if (formTable == "CostList") sb.AppendFormat("<a class=\"z-lnk-navy-n mr-3\" href=\"javascript://\" title=\"{0}\" data-zv-menu=\"importExcel\"><i class=\"fas fa-cloud-upload-alt\"></i> {1}</a>", "실적 엑셀 가져오기", "실적가져오기");
            sb.AppendFormat("<a class=\"z-lnk-navy-n mr-3\" href=\"javascript://\" data-zv-menu=\"exportExcel\"><i class=\"fas fa-cloud-download-alt\" title=\"{0}\"></i> {1}</a>", "엑셀 내보내기", "엑셀");
            sb.Append("<button class=\"btn icon-btn btn-outline-secondary m-0 btn-sm\" aria-controls=\"vw-full-fill\" onclick=\"_zw.ut.ctrls();\"><i class=\"fas fa-expand\"></i></button>");
        }
        else if (formTable == "ExcelList")
        {
            if (ds == null || ds.Tables.Count == 0 || ds.Tables[0].Rows.Count == 0)
            {
                sb.AppendFormat("<a class=\"z-lnk-navy-n\" href=\"javascript://\" title=\"{0}\" data-zv-menu=\"importExcel\"><i class=\"fas fa-cloud-upload-alt\"></i> {1}</a>", "엑셀 가져오기", "엑셀가져오기");
            }
        }
        else if (formTable == "StdPay")
        {
            if (ds == null || ds.Tables.Count == 0 || ds.Tables[0].Rows.Count == 0)
            {
                sb.AppendFormat("<a class=\"z-lnk-navy-n\" href=\"/ExS/MC/StdPayDetail\" title=\"{0}\"><i class=\"fas fa-edit\"></i> {1}</a>", "실적율 작성하기", "실적율작성");
            }
        }
        else if (formTable == "StdPayDetail")
        {
            DataRow row = ds.Tables[0].Rows[0];

            sb.AppendFormat("<li class=\"nav-item\"><a href=\"{0}\" class=\"z-lnk-navy-n\" title=\"{1}\"><i class=\"fas fa-backward\"></i> {2}</a></li>", GetQueryString("", "StdPay", "", ""), "되돌아가기", "목록");

            if (ViewBag.R.current["operator"].ToString() == "Y" || ZumNet.Framework.Util.StringHelper.HasAcl(ViewBag.R.current["acl"].ToString(), "S"))
            {
                if (ViewBag.Mode == "new" || ViewBag.Mode == "reuse" || ViewBag.Mode == "edit")
                {
                    sb.AppendFormat("<li class=\"nav-item\"><a href=\"javascript:\" class=\"z-lnk-navy-n ml-3\" title=\"{0}\" data-zf-menu=\"saveStd\"><i class=\"fas fa-check\"></i> 저장</a></li>", "실적율 저장하기");
                    //if (Master.Mode == "edit") sb.AppendFormat("<li><a href=\"javascript:\" class=\"nav-link text-info\" title=\"{0}\" data-zf-menu=\"reqApproval\"><i class=\"glyphicon glyphicon-send\"></i> 결재요청</a></li>", "결재요청하기");
                }
                else
                {
                    if (row != null && row["STATE"].ToString() == "0" && (ViewBag.R.current["operator"].ToString() == "Y" || Session["URID"].ToString() == row["CRID"].ToString())) //관리자, 작성자
                    {
                        sb.AppendFormat("<li class=\"nav-item\"><a href=\"{0}\" class=\"z-lnk-navy-n ml-3\" title=\"{1}\"><i class=\"far fa-edit\"></i> {2}</a></li>", GetQueryString("edit", ViewBag.R.ft.ToString(), "", ViewBag.R.appid.ToString()), "실적율 편집하기", "편집");
                        sb.AppendFormat("<li class=\"nav-item\"><a href=\"javascript:\" class=\"z-lnk-navy-n ml-3\" title=\"{0}\" data-zf-menu=\"reqApproval\"><i class=\"fas fa-paper-plane\"></i> 결재요청</a></li>", "결재요청하기");
                    }
                    if (row["STATE"].ToString() == "7") sb.AppendFormat("<li class=\"nav-item\"><a href=\"{0}\" class=\"z-lnk-navy-n ml-3\" title=\"{1}\"><i class=\"fas fa-edit\"></i> {2}</a></li>", GetQueryString("new", ViewBag.R.ft.ToString(), "", ""), "실적율 작성하기", "실적율작성");
                    else if (row["STATE"].ToString() == "8" || row["STATE"].ToString() == "6") sb.AppendFormat("<li class=\"nav-item\"><a href=\"{0}\" class=\"text-danger ml-3\" title=\"{1}\"><i class=\"fas fa-copy\"></i> {2}</a></li>", GetQueryString("reuse", ViewBag.R.ft.ToString(), "", ViewBag.R.appid.ToString()), "실적율 재사용하기", "실적율재사용");
                }
                if (row != null && row["STATE"].ToString() == "0" && (ViewBag.R.current["operator"].ToString() == "Y" || Session["URID"].ToString() == row["CRID"].ToString())) //관리자, 작성자
                {
                    sb.AppendFormat("<li class=\"nav-item\"><a href=\"javascript:\" class=\"z-lnk-navy-n ml-3\" title=\"{0}\" data-zf-menu=\"deleteStd\"><i class=\"fas fa-times\"></i> {1}</a></li>", "삭제하기", "삭제");
                    //sb.AppendFormat("<li><a href=\"javascript:\" class=\"nav-link text-info\" title=\"{0}\" data-zf-menu=\"changeState\"><i class=\"glyphicon glyphicon-fast-forward\"></i> 완료처리</a></li>", "완료 처리하기");
                }
            }
            if (ViewBag.Mode != "new" && ViewBag.Mode != "reuse" && ViewBag.Mode != "edit") if (row["LNKEA"].ToString() != "" && row["LNKEA"].ToString() != "0") sb.AppendFormat("<li class=\"nav-item\"><a href=\"javascript:\" onclick=\"_zw.fn.openEAFormSimple('{0}');\" class=\"z-lnk-navy-n ml-3\" title=\"{1}\"><i class=\"fas fa-tag\"></i> {1}</a></li>", row["LNKEA"].ToString(), "관련문서");
        }
        //sb.Append("</ul>");
        return sb.ToString();
    }

    private string RenderDDDate(string formTable)

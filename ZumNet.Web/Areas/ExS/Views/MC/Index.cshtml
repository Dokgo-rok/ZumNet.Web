    string sListScroll = " z-list-scroll";

    //Response.Write("--" + ViewBag.CodeTable["ce.center"].ToString());
    //Response.End();

}
@functions{
    int _stdYear = 0;
    int _stdMonth = 0;

    private string RenderDDDate(string formTable)
    {
        _stdYear = Convert.ToInt32(ViewBag.R.lv.start.ToString().Substring(0, 4));
        _stdMonth = Convert.ToInt32(ViewBag.R.lv.start.ToString().Substring(4, 2));

        string sSelected = "";

        StringBuilder sb = new StringBuilder();

        sb.Append("<div class=\"input-group justify-content-end\">");

        if (formTable == "CostList")
        {
            #region [모델별원가목록]
            //법인
            sb.Append("<select class=\"custom-select\" id=\"_Target\">");
            int iCnt = 0;
            foreach (object[] o in ViewBag.CodeTable["ce.center"])
            {
                if (o[7].ToString() != "N")
                {
                    sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["tgt"]) == o[6].ToString() ? " selected" : "";
                    sb.AppendFormat("<option value=\"{0}\"{2}>{1}</option>", o[6].ToString(), o[3].ToString(), sSelected);
                    iCnt++;
                }
            }
            sb.Append("</select>");

            //고객
            sb.Append("<select class=\"custom-select\" id=\"_Cond1\">");
            sb.Append("<option value=\"\">고객</option>");
            foreach (object[] o in ViewBag.CodeTable["mc.buyer"])
            {
                sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd1"]) == o[3].ToString() ? " selected" : "";
                //Response.Write("---" + ViewBag.R.lv["cd1"].ToString() + "==" + o[3].ToString() + "==" + sSelected + "<br />");
                sb.AppendFormat("<option value=\"{0}\"{2}>{1}</option>", o[3].ToString(), o[3].ToString(), sSelected);
            }
            sb.Append("</select>");

            //품목
            sb.Append("<select class=\"custom-select\" id=\"_Cond2\">");
            sb.Append("<option value=\"\">품목</option>");
            foreach (object[] o in ViewBag.CodeTable["mc.item"])
            {
                sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd2"]) == o[3].ToString() ? " selected" : "";
                sb.AppendFormat("<option value=\"{0}\"{2}>{1}</option>", o[3].ToString(), o[3].ToString(), sSelected);
            }
            sb.Append("</select>");

            sb.Append("<select class=\"custom-select\" id=\"_SearchYear\">");
            sb.Append(ZumNet.Web.Bc.CommonUtils.OptionYear(_stdYear, 2010));
            sb.Append("</select>");


            sb.Append("<select class=\"custom-select\" id=\"_SearchMonth\">");
            sb.Append(ZumNet.Web.Bc.CommonUtils.OptionMonth(_stdMonth));
            sb.Append("</select>");

            sb.Append("<div class=\"input-group-text\" style=\"border: 0\">");

            sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd3"]) == "" ? " checked" : "";
            sb.Append("<label class=\"custom-control custom-radio m-0 mr-2\" for=\"rdo01\">");
            sb.AppendFormat("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo01\" value=\"\"{0}>", sSelected);
            sb.Append("<span class=\"custom-control-label\">전체</span>");
            sb.Append("</label>");

            sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd3"]) == "S" ? " checked" : "";
            sb.Append("<label class=\"custom-control custom-radio m-0 mr-2\" for=\"rdo02\">");
            sb.AppendFormat("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo02\" value=\"S\"{0}>", sSelected);
            sb.Append("<span class=\"custom-control-label\">표준有</span>");
            sb.Append("</label>");

            sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd3"]) == "R" ? " checked" : "";
            sb.Append("<label class=\"custom-control custom-radio m-0 mr-0\" for=\"rdo03\">");
            sb.AppendFormat("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo03\" value=\"R\"{0}>", sSelected);
            sb.Append("<span class=\"custom-control-label\">실적有</span>");
            sb.Append("</label>");
            sb.Append("</div>");

            sb.AppendFormat("<input type=\"text\" class=\"form-control search-text\" placeholder=\"모델\" style=\"max-width: 150px\" value=\"{0}\">", ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["searchtext"]));
            sb.Append("<div class=\"input-group-append\">");
            sb.Append("<button class=\"btn btn-primary\" data-zv-menu=\"search\"><i class=\"fe-search\"></i></button>");
            sb.Append("</div>");
            #endregion
        }
        else if (formTable == "StdTime")
        {
            #region [모델별공수]
            sb.Append("<select class=\"custom-select\" id=\"_Target\">");
            int iCnt = 0;
            foreach (object[] o in ViewBag.CodeTable["ce.center"])
            {
                if (o[7].ToString() != "N")
                {
                    sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["tgt"]) == o[6].ToString() ? " selected" : "";
                    //Response.Write("---" + ViewBag.R.lv["tgt"].ToString() + "==" + o[6].ToString() + "==" + sSelected + "<br />");
                    sb.AppendFormat("<option value=\"{0}\"{2}>{1}</option>", o[6].ToString(), o[3].ToString(), sSelected);
                    iCnt++;
                }
            }
            sb.Append("</select>");

            sb.Append("<select class=\"custom-select\" id=\"_SearchYear\">");
            sb.Append(ZumNet.Web.Bc.CommonUtils.OptionYear(_stdYear, 2010));
            sb.Append("</select>");

            sb.Append("<select class=\"custom-select\" id=\"_SearchMonth\">");
            sb.Append(ZumNet.Web.Bc.CommonUtils.OptionMonth(_stdMonth));
            sb.Append("</select>");

            sb.AppendFormat("<input type=\"text\" class=\"form-control search-text\" placeholder=\"모델\" style=\"max-width: 150px\" value=\"{0}\">", ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["searchtext"]));
            sb.Append("<div class=\"input-group-append\">");
            sb.Append("<button class=\"btn btn-primary\" data-zv-menu=\"search\"><i class=\"fe-search\"></i></button>");
            sb.Append("</div>");
            #endregion
        }

        sb.Append("</div>");
        return sb.ToString();
    }
}

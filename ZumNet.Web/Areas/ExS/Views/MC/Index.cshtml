            sb.Append("<span class=\"custom-control-label\">전체</span>");
            sb.Append("</label>");

            sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd3"]) == "S" ? " checked" : "";
            sb.Append("<label class=\"custom-control custom-radio m-0 mr-2\" for=\"rdo02\">");
            sb.AppendFormat("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo02\" value=\"S\"{0}>", sSelected);
            sb.Append("<span class=\"custom-control-label\">표준有</span>");
            sb.Append("</label>");

            sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["cd3"]) == "R" ? " checked" : "";
            sb.Append("<label class=\"custom-control custom-radio m-0 mr-0\" for=\"rdo03\">");
            sb.AppendFormat("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo03\" value=\"R\"{0}>", sSelected);
            sb.Append("<span class=\"custom-control-label\">실적有</span>");
            sb.Append("</label>");
            sb.Append("</div>");

            sb.AppendFormat("<input type=\"text\" class=\"form-control search-text\" placeholder=\"모델\" style=\"max-width: 150px\" value=\"{0}\">", ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["searchtext"]));
            sb.Append("<div class=\"input-group-append\">");
            sb.Append("<button class=\"btn btn-primary\" data-zv-menu=\"search\"><i class=\"fe-search\"></i></button>");
            sb.Append("</div>");
            #endregion
        }
        else if (formTable == "StdTime")
        {
            #region [모델별공수]
            sb.Append("<select class=\"custom-select\" id=\"_Target\">");
            int iCnt = 0;
            foreach (object[] o in ViewBag.CodeTable["ce.center"])
            {
                if (o[7].ToString() != "N")
                {
                    sSelected = ZumNet.Framework.Util.StringHelper.SafeString(ViewBag.R.lv["tgt"]) == o[6].ToString() ? " selected" : "";
                    //Response.Write("---" + ViewBag.R.lv["tgt"].ToString() + "==" + o[6].ToString() + "==" + sSelected + "<br />");
                    sb.AppendFormat("<option value=\"{0}\"{2}>{1}</option>", o[6].ToString(), o[3].ToString(), sSelected);

    <script type="text/javascript">(function () {_zw.V = @Html.Raw(JsonConvert.SerializeObject(ViewBag.R))}());</script>

    @if (ViewBag.R.ft.ToString() == "CodeMgr")
    {
        <script type="text/javascript">
            $(function () {
                $('.card[data-zf-code]').each(function () {
                    var $this = $(this), cd = $this.attr('data-zf-code'), tp = $this.find('.zf-sp-template');

                    $this.find('button[data-btn="add"]').on('click', function () {
                        $this.find('table tbody').append(tp.html());

                        var row = $this.find('table tbody tr').last();
                        row.find('button[data-btn="del"]').on('click', function () {
                            _zw.fn.setCode('delete', $this, cd, row);
                        });
                        row.find('button[data-btn="save"]').on('click', function () {
                            _zw.fn.setCode('save', $this, cd, row);
                        });
                    });

                    $this.find('button[data-btn="del"]').on('click', function () {
                        _zw.fn.setCode('delete', $this, cd, $(this).parent().parent().parent());
                    });

                    $this.find('button[data-btn="save"]').on('click', function () {
                        _zw.fn.setCode('save', $this, cd, $(this).parent().parent().parent());
                    });
                });

            });
        </script>

    }
    else if (ViewBag.R.ft.ToString() == "StdPayDetail")
    {
        <script type="text/javascript">
            $(function () {

                $('.card[data-zf-code] .card-header input:checkbox').click(function () {
                    $(this).parent().parent().prev().attr('data-toggle', $(this).prop('checked') ? 'collapse' : '');
                });

                if (_zw.V.mode == 'new' || _zw.V.mode == 'reuse' || _zw.V.mode == 'edit') _zw.fn.input();
            });
        </script>
    }
}


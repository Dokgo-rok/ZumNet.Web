    {
        if (ViewBag.R.ft.ToString() == "StdTime")
        {
            ViewBag.R["ttl"] = "모델별 공수";
        }
        else if (ViewBag.R.ft.ToString() == "ExcelList")
        {
            ViewBag.R["ttl"] = "개발원가견적 엑셀 목록";
        }
        else if (ViewBag.R.ft.ToString() == "StdPay")
        {
            ViewBag.R["ttl"] = "실적원가율";
        }
        else if (ViewBag.R.ft.ToString() == "CodeMgr")
        {
            ViewBag.R["ttl"] = "코드관리";
        }
        else
        {
            ViewBag.R["ttl"] = "모델별원가 목록";
        }
    }

    ViewBag.Title = ViewBag.R["ttl"];
    Layout = "~/Views/Shared/Layouts/_Layout2Flex.cshtml";


@using System.Text;
@using System.Threading;
@using Newtonsoft.Json;
@{
    ViewBag.Title = ViewBag.R["ttl"];
    Layout = "~/Views/Shared/Layouts/_Layout2Flex.cshtml";

    string sCurrentLocale = Thread.CurrentThread.CurrentUICulture.Name;

    string sPatialView = "_" + ViewBag.R.ft.ToString();
    string sListScroll = " z-list-scroll";

    //Response.Write("--" + ViewBag.CodeTable["ce.center"].ToString());
    //Response.End();

}
@functions{
    private string RenderDDDate()
    {
        StringBuilder sb = new StringBuilder();

        //법인
        sb.Append("<div class=\"input-group justify-content-end\">");
        sb.Append("<select class=\"custom-select\" id=\"_Target\">");
        int iCnt = 0;
        foreach (object[] o in ViewBag.CodeTable["ce.center"])
        {
            if (o[7].ToString() != "N")
            {
                //if (iCnt == 0) Master.TargetCenter = Convert.ToInt32(o[6]);
                sb.AppendFormat("<option value=\"{0}\">{1}</option>", o[6].ToString(), o[3].ToString());
                iCnt++;
            }
        }
        sb.Append("</select>");

        //고객
        sb.Append("<select class=\"custom-select\" id=\"_Cond1\">");
        sb.Append("<option value=\"\">고객</option>");
        foreach (object[] o in ViewBag.CodeTable["mc.buyer"])
        {
            sb.AppendFormat("<option value=\"{0}\">{1}</option>", o[3].ToString(), o[3].ToString());
        }
        sb.Append("</select>");

        //품목
        sb.Append("<select class=\"custom-select\" id=\"_Cond2\">");
        sb.Append("<option value=\"\">품목</option>");
        foreach (object[] o in ViewBag.CodeTable["mc.item"])
        {
            sb.AppendFormat("<option value=\"{0}\">{1}</option>", o[3].ToString(), o[3].ToString());
        }
        sb.Append("</select>");

        sb.Append("<select class=\"custom-select\" id=\"_SearchYear\">");
        sb.Append(ZumNet.Web.Bc.CommonUtils.OptionYear(DateTime.Now.Year, 2010));
        sb.Append("</select>");


        sb.Append("<select class=\"custom-select\" id=\"_SearchMonth\">");
        sb.Append(ZumNet.Web.Bc.CommonUtils.OptionMonth(DateTime.Now.Month));
        sb.Append("</select>");

        sb.Append("<div class=\"input-group-text\" style=\"border: 0\">");
        sb.Append("<label class=\"custom-control custom-radio m-0 mr-2\" for=\"rdo01\">");
        sb.Append("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo01\" value=\"\" checked>");
        sb.Append("<span class=\"custom-control-label\">전체</span>");
        sb.Append("</label>");
        sb.Append("<label class=\"custom-control custom-radio m-0 mr-2\" for=\"rdo02\">");
        sb.Append("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo02\" value=\"S\">");
        sb.Append("<span class=\"custom-control-label\">표준有</span>");
        sb.Append("</label>");
        sb.Append("<label class=\"custom-control custom-radio m-0 mr-0\" for=\"rdo03\">");
        sb.Append("<input type=\"radio\" class=\"custom-control-input\" name=\"rdoSearch\" id=\"rdo03\" value=\"R\">");
        sb.Append("<span class=\"custom-control-label\">실적有</span>");
        sb.Append("</label>");
        sb.Append("</div>");

        sb.Append("<input type=\"text\" class=\"form-control search-text\" placeholder=\"모델\" style=\"max-width: 150px\">");
        sb.Append("<div class=\"input-group-append\">");
        sb.Append("<button class=\"btn btn-primary\" data-zf-menu=\"search\"><i class=\"fe-search\"></i></button>");
        sb.Append("</div>");

        sb.Append("</div>");
        return sb.ToString();
    }
}
@section Styles {
    @Styles.Render("~/bundle/vendor/css/pages/messages")
    @Styles.Render("~/Content/mc.css")
}

@section Scripts {
    @Scripts.Render("~/bundle/vendor/js/bootstrap-datepicker/bootstrap-datepicker")
    @Scripts.Render("~/bundle/vendor/js/bootstrap-maxlength/bootstrap-maxlength")
    @Scripts.Render("~/bundle/vendor/js/vanilla-text-mask/vanilla-text-mask")
    @Scripts.Render("~/bundle/vendor/js/vanilla-text-mask/text-mask-addons")

    @Scripts.Render("~/Scripts/ExS/mc.js")

    <script type="text/javascript">(function () {_zw.V = @Html.Raw(JsonConvert.SerializeObject(ViewBag.R))}());</script>
}


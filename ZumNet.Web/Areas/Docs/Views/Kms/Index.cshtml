@using System.Data;
@using System.Text;
@using Newtonsoft.Json;

@{
    ViewBag.Title = ViewBag.R["ttl"];
    Layout = "~/Views/Shared/Layouts/_Layout2Flex.cshtml";

}

@section Styles {
    @Styles.Render("~/bundle/vendor/css/pages/messages")
    
}

@section Scripts {
    @Scripts.Render("~/Scripts/Docs/kms.js")
    <script type="text/javascript">(function () {_zw.V = @Html.Raw(JsonConvert.SerializeObject(ViewBag.R))}());</script>
}

<!--
=================================================================
**************************** CONTENT ****************************
-->
<!-- `.messages-wrapper` fills all available space of container -->
<div class="messages-wrapper">

    <!-- sidebox -->
    @Html.Partial("~/Views/Common/_LeftMenu.cshtml")
    <!-- / sidebox -->
    <!-- content -->
    <div class="d-flex flex-column w-100">
        <!-- Header -->
        <div class="flex-grow-0">
            <div class="d-flex align-items-center font-weight-bold container-p-x py-3 py-md-4 m-0">
                <div class="h5 mb-0">
                    <a href="javascript:void(0)" class="messages-sidebox-toggler d-none d-md-block d-lg-none align-self-center px-2 mr-3" data-toggle="modal" data-target=".messages-sidebox"><i class="fe-more-vertical"></i></a>
                </div>

                <div class="h5 font-weight-bold mb-0 z-ttl w-100">
                    <i class="mdi mdi-file-table-box-multiple-outline"></i> &nbsp;<span>@ViewBag.Title</span>
                </div>
            </div>
        </div>
        <!-- / Header -->

        <div class="flex-grow-1 position-relative">
            <!-- Remove `.messages-scroll` and add `.flex-grow-1` if you don't need scroll -->
            <div class="messages-content flex-grow-0">
                @if (ViewBag.R.ctalias == "kms")
                {
                    <div id="__CtDashboard" class="row container-p-x">
                        <div class="z-lv-item order-2 order-md-1 col-12 col-md-7">
                            <div class="font-weight-bold">
                                <a class="" href="javascript:void(0)" data-zl-menu="Recent"><i class="mdi mdi-clock-check-outline"></i>&nbsp;@Resources.Global.RecentKnowledges</a>
                            </div>
                            <div>
                                @if (ViewBag.RecentBBS != null && ViewBag.RecentBBS.Rows.Count > 0)
                                {
                                    for (int i = 0; i < ViewBag.RecentBBS.Rows.Count; i++)
                                    {
                                        DataRow row = ViewBag.RecentBBS.Rows[i];
                                        <div class="d-flex justify-content-between align-items-center py-2" xf="@row["XFAlias"]" appid="@row["MessageID"]" fdid="@row["FD_ID"]">
                                            <div class="text-truncate">
                                                @if (i % 3 == 0)
                                                {
                                                    <div class="badge badge-pill badge-third opacity-50">@row["FDName"]</div>
                                                }
                                                else if (i % 3 == 1)
                                                {
                                                    <div class="badge badge-pill badge-warning opacity-75">@row["FDName"]</div>
                                                }
                                                else
                                                {
                                                    <div class="badge badge-pill badge-primary opacity-75">@row["FDName"]</div>
                                                }
                                                <div class="text-truncate mt-1"><a href="javascript:void(0)" onclick="_zw.mu.readMsg('popup');" class="" title="@Html.Raw(row["Subject"])" data-toggle="tooltip" data-placement="bottom">@row["Subject"]</a></div>
                                            </div>
                                            <div class="text-truncate">
                                                <span class="text-secondary mr-3">@row["CreatorName"]</span>

                                                @ZumNet.Web.Bc.CommonUtils.LvDate(row["PublishDate"].ToString())
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="w-100 text-center text-secondary pt-3">@Resources.Global.NoItemShow</div>
                                }
                            </div>
                        </div>
                        <div class="z-lv-item order-1 order-md-2 col-12 col-md-5 pl-md-4">
                            <div class="">
                                <div class="font-weight-bold">
                                    <a class="" href="javascript:void(0)" data-zl-menu="Approval"><i class="fe-edit"></i>&nbsp;처리할 지식</a>
                                </div>
                                <div>
                                    @if (ViewBag.ListApv.Rows.Count > 0)
                                    {
                                        foreach (DataRow row in ViewBag.ListApv.Rows)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-2" xf="@row["XFAlias"]" appid="@row["MessageID"]" fdid="@row["FD_ID"]">
                                                <div class="text-truncate mt-1">
                                                    <a href="javascript:void(0)" onclick="_zw.mu.readMsg('popup');" class="" title="@Html.Raw(row["Subject"])" data-toggle="tooltip" data-placement="bottom"><span class="badge badge-pill badge-default">@row["FDName"]</span> @row["Subject"]</a>
                                                </div>
                                                <div class="text-truncate">
                                                    @ZumNet.Web.Bc.CommonUtils.LvDate(row["PublishDate"].ToString())
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="w-100 text-center text-secondary pt-3">@Resources.Global.NoItemShow</div>
                                    }
                                </div>
                            </div>

                            @*<div class="py-3 py-md-5"></div>

                            <div class="">
                                <div class="font-weight-bold">
                                    <i class="fe-send"></i> &nbsp;<span>진행중 지식</span>
                                </div>
                                <div>
                                    @if (ViewBag.ListProc.Rows.Count > 0)
                                    {
                                        foreach (DataRow row in ViewBag.ListProc.Rows)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-2" xf="@row["XFAlias"]" appid="@row["MessageID"]" fdid="@row["FD_ID"]">
                                                <div class="text-truncate mt-1">
                                                    <a href="javascript:void(0)" onclick="_zw.mu.readMsg('popup');" class="" title="@Html.Raw(row["Subject"])" data-toggle="tooltip" data-placement="bottom"><span class="badge badge-pill badge-default">@row["FDName"]</span> @row["Subject"]</a>
                                                </div>
                                                <div class="text-truncate">
                                                    @ZumNet.Web.Bc.CommonUtils.LvDate(row["PublishDate"].ToString())
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="w-100 text-center text-secondary pt-3">@Resources.Global.NoItemShow</div>
                                    }
                                </div>
                            </div>*@

                            <div class="py-3 d-block d-md-none"></div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- / content -->

</div><!-- / .messages-wrapper -->

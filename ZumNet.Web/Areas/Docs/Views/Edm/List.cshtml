<!--
=================================================================
**************************** CONTENT ****************************
-->
<!-- `.messages-wrapper` fills all available space of container -->
<div class="messages-wrapper">

    <!-- sidebox -->
    @Html.Partial("~/Views/Common/_LeftMenu.cshtml")
    <!-- / sidebox -->

    <!-- content -->
    <div class="d-flex flex-column w-100">
        <!-- Header -->
        <div class="flex-grow-0">
            <div class="d-flex justify-content-between container-p-x m-0 mt-1 pt-3" style="padding-bottom: .65rem !important">
                <div class="d-flex align-items-center font-weight-bold">
                    <div class="h5 mb-0">
                        <a href="javascript:void(0)" class="messages-sidebox-toggler d-none d-md-block d-lg-none align-self-center px-2 mr-3" data-toggle="modal" data-target=".messages-sidebox"><i class="fe-more-vertical"></i></a>
                    </div>

                    <div class="h5 mb-0 z-ttl">
                        <i class="mdi mdi-file-table-box-multiple-outline"></i> &nbsp;<span>@ViewBag.Title</span>
                    </div>
                </div>
                <div class="d-flex align-items-center z-lv-page" id="__ListCount">
                    @Html.Partial("~/Views/Common/_ListCount.cshtml")
                </div>

            </div>

            <hr class="border-light m-0 d-none">

            <div class="d-flex align-items-center container-p-x" style="padding-bottom: .6rem !important">
                <div class="z-lv-menu btn-group-sm" id="__ListMenu">
                    @Html.Partial("~/Views/Common/_ListMenu.cshtml")
                </div>
                <div class="px-1 flex-grow-1"></div>
                <div class="d-flex z-lv-cond">
                    <div class="datepicker input-group input-daterange z-lv-date mr-1">
                        <input type="text" class="form-control start-date px-1" value="@ViewBag.R.lv.start">
                        <div class="input-group-prepend">
                            <span class="input-group-text">~</span>
                        </div>
                        <input type="text" class="form-control end-date px-1" value="@ViewBag.R.lv.end">
                    </div>
                    <div class="input-group z-lv-search">
                        <select class="custom-select">
                            <option value="">@Resources.Global.Select...</option>
                            <option value="Subject" @(ViewBag.R.lv.search == "Subject" ? " selected" : "")>@Resources.Global.Title</option>
                            <option value="Creator" @(ViewBag.R.lv.search == "Creator" ? " selected" : "")>@Resources.Global.Writer</option>
                        </select>
                        <input type="text" class="form-control search-text" placeholder="@Resources.Global.Search" value="@ViewBag.R.lv.searchtext">
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="button" data-toggle="tooltip" data-placement="bottom" title="@Resources.Global.Search" data-zv-menu="search"><i class="fe-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- / Header -->

        <div class="flex-grow-0 z-lv-hdr">
            <ul class="list-group d-none d-sm-block">
                <li class="list-group-item list-group-item-action d-flex align-items-center container-p-x" style="background-color: rgba(52, 79, 233, 0.1)">
                    <div class="d-none d-md-block wd-lg-6 wd-xl-4 text-center text-truncate">
                        <a href="javascript:void(0)" class="flex-fill" data-val="SeqID">@Resources.Global.SeqNo<i class="@(ViewBag.R.lv.sort == "SeqID" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "") : "")"></i></a>
                    </div>

                    <div class="wd-12 wd-lg-10 wd-xl-8 text-center text-truncate">
                        <span class="flex-fill">@Resources.Global.AccessRights</span>
                    </div>

                    <div class="flex-fill text-truncate text-center">
                        <a href="javascript:void(0)" data-val="Subject">@Resources.Global.Title<i class="@(ViewBag.R.lv.sort == "Subject" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                    </div>

                    <div class="d-none d-md-block wd-lg-15 wd-xl-15 pl-2">
                        <a href="javascript:void(0)" data-val="DocNum">@Resources.Global.DocNumber<i class="@(ViewBag.R.lv.sort == "DocNum" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                    </div>

                    <div class="wd-lg-32 wd-xl-32 d-flex">
                        <div class="d-none d-md-block wd-lg-35 wd-xl-35 text-center pr-2">
                            <a href="javascript:void(0)" data-val="CreatorDept">@Resources.Global.WriteDept<i class="@(ViewBag.R.lv.sort == "CreatorDept" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                        </div>
                        <div class="wd-md-40 wd-lg-25 wd-xl-25 text-center pr-2">
                            <a href="javascript:void(0)" data-val="Creator">@Resources.Global.Writer<i class="@(ViewBag.R.lv.sort == "Creator" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                        </div>

                        <div class="wd-md-40 wd-lg-23 wd-xl-25 text-center">
                            <a href="javascript:void(0)" data-val="CreateDate">@Resources.Global.Date_Created<i class="@(ViewBag.R.lv.sort == "CreateDate" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                        </div>

                        <div class="text-right text-pink flex-fill">
                            <a href="javascript:void(0)" data-val="ViewCount">@Resources.Global.ViewCount<i class="@(ViewBag.R.lv.sort == "ViewCount" ? (ViewBag.R.lv.sortdir == "ASC" ? "fe-arrow-up" : "fe-arrow-down") : "")"></i></a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="flex-grow-1 position-relative">
            <!-- Remove `.messages-scroll` and add `.flex-grow-1` if you don't need scroll -->
            <div class="messages-content flex-grow-0 z-lv-item">
                <ul id="__ListView" class="list-group messages-list">
                    @Html.Partial("_ListView")
                </ul>
                <ul class="pagination pagination-sm justify-content-center pt-3 border-top" id="__ListViewPage">
                    @Html.Partial("~/Views/Common/_ListPagination.cshtml")
                </ul>
            </div>
        </div>
    </div>
    <!-- / content -->

</div><!-- / .messages-wrapper -->

@using System.Data;
@{

    //HttpContext.Current.Session["UseWorkTime"] = "N";
}
<div class="messages-sidebox messages-scroll bg-body border-right">
    <div class="z-mobile-navbar"></div>
    
    @if (ViewBag.R.ctalias == "bboard" || ViewBag.R.ctalias == "board.depart")
    {
        <div class="py-3 px-4">
            <div class="media align-items-center">
                <div class="media-body">
                    <a id="__NewMessage" href="javascript:void(0)" class="btn btn-teal rounded-pill btn-block"><i class="fas fa-plus mr-2"></i>@Resources.Global.ComposeNew</a>
                </div>
                <a href="javascript:void(0)" class="messages-sidebox-toggler d-none text-muted text-large font-weight-light pl-4">&times;</a>
            </div>
            <div class="row mt-3">
                <div class="col-6 text-center px-0">
                    <a class="" href="/Board/Recent"><i class="mdi mdi-clock-check-outline"></i> @Resources.Global.RecentPosts</a>
                </div>
                <div class="col-6 text-center px-1">
                    <a class="" href="/Board/Save"><i class="mdi mdi-circle-edit-outline"></i> @Resources.Global.TempBox2</a>
                </div>
            </div>
        </div>
    }
    else if (ViewBag.R.ctalias == "kdoc")
    {
        <div class="py-3 px-4">
            <div class="media align-items-center">
                <div class="media-body">
                    <a id="__NewMessage" href="javascript:void(0)" class="btn btn-facebook rounded-pill btn-block"><i class="fas fa-plus mr-2"></i>@Resources.Global.ComposeDoc</a>
                </div>
                <a href="javascript:void(0)" class="messages-sidebox-toggler d-none text-muted text-large font-weight-light pl-4">&times;</a>
            </div>
        </div>
    }
    else if (ViewBag.R.ctalias == "kms")
    {
        <div class="py-3 px-4">
            <div class="media align-items-center">
                <div class="media-body">
                    <a id="__NewMessage" href="javascript:void(0)" class="btn btn-third rounded-pill btn-block opacity-75"><i class="fas fa-plus mr-2"></i>@Resources.Global.ComposeKnowledge</a>
                </div>
                <a href="javascript:void(0)" class="messages-sidebox-toggler d-none text-muted text-large font-weight-light pl-4">&times;</a>
            </div>
            <div class="row mt-3">
                <div class="col-6 text-center px-0">
                    <a class="" href="/Docs/Kms/Recent"><i class="mdi mdi-clock-check-outline"></i> @Resources.Global.RecentPosts</a>
                </div>
                <div class="col-6 text-center px-1">
                    <a class="" href="/Docs/Kms/Save"><i class="mdi mdi-circle-edit-outline"></i> @Resources.Global.TempBox2</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="pt-3 px-3">
            <div class="media align-items-center px-1">
                <div class="media-body">
                </div>
                <a href="javascript:void(0)" class="messages-sidebox-toggler d-none text-muted text-large font-weight-light pl-4">&times;</a>
            </div>
        </div>
    }


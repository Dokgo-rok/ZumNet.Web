@using System.Data;

<ul id="__ListView" class="list-group messages-list">
    @*<li class="list-group-item list-group-item-action d-flex container-p-x">
        @DateTime.Now.ToString("d") @DateTime.Now.ToString("t")
    </li>*@
    @foreach (DataRow row in ViewBag.BoardList)
    {
        string sRead = row["IsRead"].ToString() == "N" ? " font-weight-bold" : "";
        string sTopLine = row["TopLine"].ToString() == "Y" ? " z-lv-topline" : "";

    <li class="list-group-item list-group-item-action d-flex align-items-center container-p-x@(sRead)@(sTopLine)">
        <div class="wd-8 wd-lg-5 wd-xl-4 message-checkbox">
            <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input">
                <span class="custom-control-label"></span>
            </label>
        </div>

        <div class="d-none d-md-block wd-lg-5 wd-xl-4 text-sm-right pr-3">
            <span class="flex-fill">@row["SeqID"]</span>
        </div>

        <div class="wd-92 flex-fill text-truncate">
            <a href="javascript:void(0)">@row["Subject"].ToString()</a>
        </div>

        <div class="w-100 d-sm-none py-0"></div>
        <div class="wd-8 d-sm-none"></div>

        <div class="">
        @if (row["HasAttachFile"].ToString() != "0")
        {
            <a href="javascript:void(0)" class="wd-lg-6 text-blue pr-2"><i class="fe-paperclip"></i></a>
        }
        </div>

        <div class="wd-12 wd-lg-12 wd-xl-12 t-sm text-sm-center pr-2">
            <span class="">@row["CreatorName"]</span>
        </div>

        <div class="wd-20 wd-lg-12 wd-xl-10 t-sm pr-2">
            <span class="">@ZumNet.Web.Bc.CommonUtils.LvDate(row["PublishDate"].ToString())</span>
        </div>

        <div class="text-right text-pink flex-grow-1 flex-sm-shrink-1">
            <span class="">@row["ViewCount"]</span>
        </div>
    </li>
    }
</ul>
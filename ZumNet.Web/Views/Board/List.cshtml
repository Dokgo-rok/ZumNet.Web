<!-- `.messages-wrapper` fills all available space of container -->
<div class="messages-wrapper">

    <!-- sidebox -->
    @Html.Partial("~/Views/Common/_LeftMenu.cshtml")
    <!-- / sidebox -->

    <!-- content -->
    <div class="d-flex flex-column w-100">
        <!-- Header -->
        <div class="flex-grow-0">
            <div class="d-flex justify-content-between container-p-x m-0 mt-1 pt-3" style="padding-bottom: .65rem !important">
                <div class="d-flex align-items-center font-weight-bold">
                    <div class="h5 mb-0">
                        <a href="javascript:void(0)" class="messages-sidebox-toggler d-none d-md-block d-lg-none align-self-center px-2 mr-3" data-toggle="modal" data-target=".messages-sidebox"><i class="fe-more-vertical"></i></a>
                    </div>

                    <div class="h5 mb-0 z-ttl">
                        <i class="mdi mdi-file-table-box-multiple-outline"></i> &nbsp;<span>@ViewBag.Title</span>
                    </div>
                </div>
                <div class="d-flex align-items-center z-lv-page" id="__ListCount">
                    @Html.Partial("~/Views/Common/_ListCount.cshtml")
                </div>

            </div>

            <hr class="border-light m-0 d-none">

            <div class="d-flex align-items-center container-p-x" style="padding-bottom: .6rem !important">
                <div class="z-lv-menu btn-group-sm">
                    <button class="btn btn-outline-secondary text-big" data-toggle="tooltip" data-placement="bottom" title="@Resources.Global.Refresh" data-zv-menu="refresh"><i class="fe-refresh-cw"></i></button>
                    @if (ViewBag.R.current["operator"].ToString() == "Y" || ZumNet.Framework.Util.StringHelper.HasAcl(ViewBag.R.current["acl"].ToString().Substring(0, 6), "W"))
                    {
                        <button class="btn btn-outline-primary text-big" data-toggle="tooltip" data-placement="bottom" title="@Resources.Global.ComposeNew" data-zv-menu="write"><i class="fe-edit-2"></i></button>
                    }
                    @if (ViewBag.R.current["operator"].ToString() == "Y" || ZumNet.Framework.Util.StringHelper.HasAcl(ViewBag.R.current["acl"].ToString().Substring(0, 6), "D"))
                    {
                        <button class="btn btn-outline-secondary text-big" data-toggle="tooltip" data-placement="bottom" title="@Resources.Global.Delete" data-zv-menu="delete"><i class="fe-trash-2"></i></button>
                    }

                </div>
                <div class="px-1 flex-grow-1"></div>
                <div class="d-flex z-lv-cond">
                    <div class="datepicker input-group input-daterange z-lv-date mr-1">
                        <input type="text" class="form-control start-date px-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text">~</span>
                        </div>
                        <input type="text" class="form-control end-date px-1">
                    </div>
                    <div class="input-group z-lv-search">
                        <select class="custom-select">
                            <option value="">@Resources.Global.Select...</option>
                            <option value="Subject">@Resources.Global.Title</option>
                            <option value="CreatorName">@Resources.Global.Writer</option>
                        </select>
                        <input type="text" class="form-control search-text" placeholder="@Resources.Global.Search">
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="button"  data-toggle="tooltip" data-placement="bottom" title="@Resources.Global.Search" data-zv-menu="search"><i class="fe-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- / Header -->

        <div class="flex-grow-0 z-lv-hdr">
            <ul class="list-group d-none d-sm-block">
                <li class="list-group-item list-group-item-action d-flex align-items-center container-p-x" style="background-color: rgba(32, 201, 151, 0.1)">
                    <div class="wd-lg-5 wd-xl-4 message-checkbox">
                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input">
                            <span class="custom-control-label"></span>
                        </label>
                    </div>

                    <div class="d-none d-md-block wd-lg-6 wd-xl-5 text-center pr-2">
                        <span class="flex-fill">ID</span>
                    </div>

                    <div class="flex-fill text-truncate text-center">
                        <a href="javascript:void(0)">@Resources.Global.Title</a>
                    </div>

                    <div class="wd-lg-34 wd-xl-32 d-flex">
                        <div class="wd-lg-12 wd-xl-10">
                            @Resources.Global.Attach
                        </div>
                        <div class="wd-15 wd-lg-35 wd-xl-35 t-sm text-sm-center text-center pr-2">
                            <span class="">@Resources.Global.Writer</span>
                        </div>

                        <div class="wd-20 wd-lg-35 wd-xl-30 t-sm text-sm-center text-center pr-2">
                            <span class="">@Resources.Global.Date_Created</span>
                        </div>

                        <div class="text-right text-pink flex-fill">
                            <span class="">@Resources.Global.ViewCount</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="flex-grow-1 position-relative">
            <!-- Remove `.messages-scroll` and add `.flex-grow-1` if you don't need scroll -->
            <div class="messages-content flex-grow-0 z-lv-item">
                <ul id="__ListView" class="list-group messages-list">
                    @Html.Partial("_ListView")
                </ul>

                <ul class="pagination pagination-sm justify-content-center pt-3 border-top" id="__ListPage">
                    @Html.Partial("~/Views/Common/_ListPagination.cshtml")
                </ul>
            </div>
        </div>
    </div>
    <!-- / content -->

</div><!-- / .messages-wrapper -->

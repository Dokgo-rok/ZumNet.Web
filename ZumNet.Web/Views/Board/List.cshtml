@using System.Data;
@using System.Text;
@using System.Threading;
@using Newtonsoft.Json;

@{
    ViewBag.Title = ViewBag.R["ttl"]; //"게시판";
    Layout = "~/Views/Shared/Layouts/_Layout2Flex.cshtml";

    string sCurrentLocale = Thread.CurrentThread.CurrentUICulture.Name;
}

@section Styles {
    @Styles.Render("~/bundle/vendor/css/jstree/themes/default/style")
    @Styles.Render("~/bundle/vendor/css/bootstrap-datepicker/bootstrap-datepicker")
    @Styles.Render("~/bundle/vendor/css/pages/messages")
}

@section Scripts {
    @Scripts.Render("~/bundle/vendor/js/jstree/jstree")
    @Scripts.Render("~/bundle/vendor/js/bootstrap-datepicker/bootstrap-datepicker")
    @Scripts.Render("~/Scripts/Board/List.js")

    @if (sCurrentLocale != "" && sCurrentLocale.Substring(0, 2) != "en")
    {
        <script src="/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.@(sCurrentLocale.Substring(0, 2)).js" charset="UTF-8"></script>
    }
    <script type="text/javascript">(function () {_zw.V = @Html.Raw(JsonConvert.SerializeObject(ViewBag.R))}());</script>
}

<!--
=================================================================
**************************** CONTENT ****************************
-->
<!-- `.messages-wrapper` fills all available space of container -->
<div class="messages-wrapper">

    <!-- sidebox -->
    <div class="messages-sidebox messages-scroll bg-body border-right">
        <div class="z-mobile-navbar"></div>

        <div class="py-3 px-4">
            <div class="media align-items-center">
                <div class="media-body">
                    <a id="__NewMessage" href="javascript:void(0)" class="btn btn-teal rounded-pill btn-block">게시물작성</a>
                </div>
                <a href="javascript:void(0)" class="messages-sidebox-toggler d-none text-muted text-large font-weight-light pl-4">&times;</a>
            </div>
            <div class="row mt-3">
                <div class="col-6 text-center px-0">
                    <a class="" href="/Board/Recent"><i class="mdi mdi-clock-check-outline"></i> 최근게시물</a>
                </div>
                <div class="col-6 text-center px-1">
                    <a class="" href="/Board/Save"><i class="mdi mdi-circle-edit-outline"></i> 임시저장함</a>
                </div>

            </div>
        </div>

        <hr class="border-light mx-4 mt-0 mb-3">

        <!-- sidebox tree -->
        <div id="__FolderTree" class="px-3"></div>
        <!-- / sidebox tree -->
    </div>
    <!-- / sidebox -->
    <!-- content -->
    <div class="d-flex flex-column w-100">
        <!-- Header -->
        <div class="flex-grow-0">
            <div class="d-flex align-items-center font-weight-bold container-p-x py-3 py-lg-4 m-0">
                <div class="h5 mb-0">
                    <a href="javascript:void(0)" class="messages-sidebox-toggler d-none d-md-block d-lg-none align-self-center px-2 mr-3" data-toggle="modal" data-target=".messages-sidebox"><i class="fe-more-vertical"></i></a>
                </div>

                <div class="h5 font-weight-bold mb-0 z-ttl">
                    <i class="mdi mdi-file-table-box-multiple-outline"></i> &nbsp;<span>@ViewBag.Title</span>
                </div>
            </div>

            <hr class="border-light m-0">

            <div class="d-flex align-items-center justify-content-between container-p-x py-1">
                <div>
                    <i class="fe-grid"></i> 총 @ViewBag.R.lv.total
                </div>
                <div class="d-flex justify-content-end">
                    <div class="datepicker input-group input-daterange">
                        <i class="fe-search"></i>
                        <input type="text" class="form-control start-date px-0">
                        <div class="input-group-prepend">
                            <span class="input-group-text">~</span>
                        </div>
                        <input type="text" class="form-control end-date px-0">
                    </div>
                    <div class="input-group">
                        <select class="custom-select">
                            <option>선택...</option>
                            <option>제목</option>
                            <option>작성자</option>
                        </select>
                        <input type="text" class="form-control" placeholder="">
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="button">검색</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- / Header -->

        <div class="flex-grow-0">
            <ul class="list-group">
                <li class="list-group-item d-flex container-p-x">
                    <div class="message-checkbox mr-1">
                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input">
                            <span class="custom-control-label"></span>
                        </label>
                    </div>
                    <a href="javascript:void(0)" class="ion ion-md-star-outline d-block text-lighter text-big mr-3"></a>

                    <div class="order-sm-2 wd-20 wd-xl-12 wd-lg-8 t-sm">
                        <span class="flex-fill">작성자</span>
                    </div>

                    <div class="order-sm-4 wd-xl-10 wd-lg-15 wd-40 t-sm docu">
                        <span class="flex-fill">작성부서</span>
                    </div>

                    <div class="order-sm-last wd-xl-8 wd-lg-12 wd-20 t-sm docu" style="text-align:end;">작성일</div>


                    <div class="subject order-sm-3 ml-24 wd-lg-40 wd-xl-50 wd-95 t-lg">
                        <a href="" style="color:black">제목</a><i class="ion ion-md-attach ml-1"></i>

                    </div>
                </li>
            </ul>
        </div>

        <div class="flex-grow-1 position-relative">
            <!-- Remove `.messages-scroll` and add `.flex-grow-1` if you don't need scroll -->
            <div class="messages-content flex-grow-0">
                @Html.Partial("_ListView")

                @Html.Partial("_ListPagination")
            </div>
        </div>
    </div>
    <!-- / content -->

</div><!-- / .messages-wrapper -->

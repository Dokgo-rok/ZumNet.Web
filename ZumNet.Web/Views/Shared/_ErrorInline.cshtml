@model System.Web.Mvc.HandleErrorInfo

<div class="m-3">
    <div class="text-center">
        <h4 class="text-uppercase">Application Error </h4>
    </div>
    <div class="text-center text-secondary">
        <h5>@Model.ControllerName / @Model.ActionName</h5>
        <div class="">
            <span class="h5">Please contact ths administrator. </span>
            <button class="btn btn-info btn-sm icon-btn dropdown-toggle hide-arrow" data-toggle="dropdown" aria-expanded="false" title="Show Error Message">
                <i class="fe-alert-triangle"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" style="z-index: 1200">
                <p class="dropdown-item text-muted text-wrap m-2" style="line-height: 20px; max-width: 400px">
                    @Model.Exception.Message
                </p>
            </div>
        </div>
    </div>
</div>
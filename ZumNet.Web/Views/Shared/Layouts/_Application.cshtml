<!DOCTYPE html>
<html lang="en" class="light-style layout-fixed layout-navbar-fixed">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <title>@ViewBag.Title</title>

    <!-- Main font -->
    @*<link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900" rel="stylesheet" crossorigin="anonymous" />*@
    @Styles.Render("~/bundle/vendor/fonts")

    <!-- Icons. Uncomment required icon fonts -->
    @Styles.Render("~/bundle/vendor/fonts/fontawesome")
    @*@Styles.Render("~/bundle/vendor/fonts/ionicons")
        @Styles.Render("~/bundle/vendor/fonts/linearicons")
        @Styles.Render("~/bundle/vendor/fonts/open-iconic")
        @Styles.Render("~/bundle/vendor/fonts/pe-icon-7-stroke")*@
    @Styles.Render("~/bundle/vendor/fonts/materialdesignicons")
    @Styles.Render("~/bundle/vendor/fonts/feather")
    @*@Styles.Render("~/bundle/vendor/icons")*@

    <!-- Core stylesheets -->
    @Styles.Render("~/bundle/vendor/css/bootstrap")
    @Styles.Render("~/bundle/vendor/css/appwork")
    @*@Styles.Render("~/bundle/vendor/css/zumworks")*@
    @*@Styles.Render("~/bundle/vendor/css/theme-twitlight-dark")*@
    @Styles.Render("~/bundle/css/theme-cresyn")
    @*@Styles.Render("~/bundle/css/theme-cresyn-blue")*@
    @*@Styles.Render("~/bundle/vendor/css/colors")
        @Styles.Render("~/bundle/vendor/css/uikit")
        @Styles.Render("~/bundle/vendor/css/waves/waves")*@
    @Styles.Render("~/bundle/vendor/css/csskit")

    <!-- Load polyfills -->
    @Scripts.Render("~/bundle/vendor/js/polyfills")
    <script>document['documentMode'] === 10 && document.write('<script src="https://polyfill.io/v3/polyfill.min.js?features=Intl.~locale.en"><\/script>')</script>

    <!-- Layout helpers -->
    @Scripts.Render("~/bundle/vendor/js/layout-helpers")

    <!-- Core scripts -->
    @Scripts.Render("~/bundle/vendor/js/pace")

    <!-- `perfect-scrollbar` library required by SideNav plugin -->
    @Styles.Render("~/bundle/vendor/css/perfect-scrollbar/perfect-scrollbar")

    <!-- Application stylesheets -->
    @Styles.Render("~/bundle/css/site")

    @RenderSection("styles", required: false)
</head>
<body>
    <div class="page-loader"><div class="bg-info"></div></div>
    @RenderBody()

    <!-- Modal WorkStatus -->
    <div class="modal fade" id="popWorkStatus" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content" style="border-radius: .5rem">
                <div class="modal-header d-flex justify-content-between align-items-center px-4 py-2">
                    <h5 class="mb-0">@Resources.Global.WorkCond</h5>
                    <div class="font-weight-bold text-big py-1" id="lblClock">@DateTime.Now.ToString("HH:mm:ss")</div>
                </div>
                <div class="modal-body pb-2">
                    <div class="row d-flex">
                        @if (ViewBag.R.current["intime"] == "")
                        {
                            <div class="col-6 flex-fill text-center">
                                <h5 class="text-windows mb-2"><i class="mdi mdi-clock-time-nine-outline"></i><span class="ml-1"> @Resources.Global.PlanWorktTime</span></h5>
                                <p class="text-muted text-big mb-2">@DateTime.Now.ToShortDateString()</p>
                                <h5 class="mb-1 text-secondary">09:00:00</h5>
                            </div>
                        }
                        else
                        {
                            <div class="col-6 flex-fill text-center">
                                <h5 class="text-windows mb-2"><i class="mdi mdi-clock-time-nine-outline"></i><span class="ml-1"> @Resources.Global.WorktTime</span></h5>
                                <p class="text-muted text-big mb-2">@DateTime.Now.ToShortDateString()</p>
                                <h5 class="mb-1 text-secondary">@ViewBag.R.current["intime"]</h5>
                            </div>
                        }

                        @if (ViewBag.R.current["outtime"] == "")
                        {
                            <div class="col-6 flex-fill text-center" style="border-left: 2px solid #e2e2e2">
                                <h5 class="mb-2" style="color: rgb(255, 117, 16)"><i class="mdi mdi-clock-time-five-outline"></i><span class="ml-1"> @Resources.Global.PlanLeaveTime</span></h5>
                                <p class="text-muted text-big mb-2">@DateTime.Now.ToShortDateString()</p>
                                <h5 class="mb-1 text-secondary">18:00:00</h5>
                            </div>
                        }
                        else
                        {
                            <div class="col-6 flex-fill text-center" style="border-left: 2px solid #e2e2e2">
                                <h5 class="mb-2" style="color: rgb(255, 117, 16)"><i class="mdi mdi-clock-time-five-outline"></i><span class="ml-1"> @Resources.Global.LeaveTime</span></h5>
                                <p class="text-muted text-big mb-2">@DateTime.Now.ToShortDateString()</p>
                                <h5 class="mb-1 text-secondary">@ViewBag.R.current["outtime"]</h5>
                            </div>
                        }
                    </div>
                    
                    <hr class="border mx-1 ">

                    <div class="col-12 mt-3 mb-0">
                        <div class="custom-controls-stacked ml-5 pl-4 pl-md-5">
                            <label class="custom-control custom-radio h5">
                                <input name="custom-radio-3" type="radio" class="custom-control-input" checked>
                                <span class="custom-control-label ml-1">@Resources.Global.InWork</span>
                            </label>
                            <label class="custom-control custom-radio h5">
                                <input name="custom-radio-3" type="radio" class="custom-control-input">
                                <span class="custom-control-label ml-1">@Resources.Global.InRest</span>
                            </label>
                            <label class="custom-control custom-radio h5">
                                <input name="custom-radio-3" type="radio" class="custom-control-input">
                                <span class="custom-control-label ml-1">@Resources.Global.InOut</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer d-block">
                    <div class="d-flex px-2 my-2">
                        <button type="button" class="flex-fill btn btn-outline-success btn-fill mr-2" data-zm-menu="save">@Resources.Global.Save</button>
                        <button type="button" class="flex-fill btn btn-primary mr-2" data-zm-menu="form">@Resources.Global.ComposeForm</button>
                        <button type="button" class="flex-fill btn btn-default" data-dismiss="modal">@Resources.Global.Close</button>
                    </div>
                    <div class="text-center px-2 my-2">
                        <button class="btn btn-outline-windows btn-block font-weight-bold" data-zm-menu="offwork">@Resources.Global.OffWork</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Popup -->
    <div class="modal fade" id="popLayer" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true" data-width="350px"></div>
    <!-- Modal Loader -->
    <div class="modal modal-ajaxloader" id="ajaxLoader" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="d-flex justify-content-center align-items-center">
                        @*<div class="sk-circle-fade sk-primary">
                                <div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div>
                            </div>*@
                        <div><img alt="loader" src="/Images/loader.gif" /></div>
                        @*<div class="spinner-border text-success" role="status"><span class="sr-only"></span></div>*@
                        <div class="modal-title h4 pl-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<div class="modal-ajaxloader">
            <div class="d-flex justify-content-center align-items-center">
                <div class="sk-circle-fade sk-primary">
                        <div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div><div class="sk-circle-fade-dot"></div>
                    </div>
                <div><img alt="loader" src="/Images/loader.gif" /></div>
                <div class="spinner-border text-success" role="status"><span class="sr-only"></span></div>
                <div class="modal-title h4 pl-4 text-muted"></div>
            </div>
        </div>*@

    <!-- Core scripts -->
    @Scripts.Render("~/bundle/jquery")

    <!-- Uncomment the following line to enable unobtrusive validation -->
    @*@Html.Partial("_ValidationScriptsPartial")*@
    @Scripts.Render("~/bundle/vendor/js/popper/popper")
    @Scripts.Render("~/bundle/vendor/js/bootstrap")
    @Scripts.Render("~/bundle/vendor/js/sidenav")

    <!-- Libs -->
    <!-- `perfect-scrollbar` library required by SideNav plugin -->
    @Scripts.Render("~/bundle/vendor/js/perfect-scrollbar/perfect-scrollbar")

    <!-- Application javascripts -->
    @Scripts.Render("~/bundle/js/site")

    @RenderSection("scripts", required: false)
</body>
</html>
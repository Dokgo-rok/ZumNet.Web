
@{
    ViewBag.Title = "출근하기";
    Layout = "~/Views/Shared/Layouts/_LayoutBlank.cshtml";

    //Response.Write("WorkStatus => " + ViewBag.WorkStatus["WorkStatus"]);
}

@section Styles {
    <style type="text/css">
        html, body {
            height: 100%
        }

        .z-clockin {
            display: flex !important;
            flex-shrink: 1;
            justify-content: center !important;
            padding-top: 10rem;
        }

        .card {
            border-radius: 1.5rem !important;
            -webkit-box-flex: 0;
            -ms-flex: 0 0 320px;
            flex: 0 0 320px;
            min-width: 320px;
            border: .5rem solid #ccc;
        }

        .card-header {
            /*border-top-left-radius: 1rem !important;
            border-top-right-radius: 1rem !important;*/
            font-size: .9rem;
        }

        .ccircle {
            width: 180px;
            border-radius: 50%;
            border: 1rem solid #26AAE1;
            font-size: 1.5rem;
            letter-spacing: 0px;
            line-height: 8rem;
        }

        .vl {
            border-left: 2px solid #e2e2e2;
            height: 100px;
            position: absolute;
            left: 50%;
        }
    </style>
}

<div class="h-100 bg-light">
    <div class="z-clockin">
        <div class="card">
            <div class="m-2 card-header d-flex justify-content-between p-2 border-secondary">
                <div class="pt-1"><i class="fas fa-angle-right"></i> @Resources.Global.WorkCond</div>
                <div class="btn btn-secondary text-white font-weight-bold text-big py-1" id="lblClock">@DateTime.Now.ToString("HH:mm:ss")</div>
            </div>
            <div class="card-body p-2">
                <div class="row d-flex">
                    <div class="col-6 flex-fill text-center">
                        <h5 class="text-windows"><i class="mdi mdi-clock-time-nine-outline"></i><span class="ml-1"> @Resources.Global.PlanWorktTime</span></h5>
                        <p class="text-muted text-big">@DateTime.Now.ToShortDateString()</p>
                        <h2></h2>
                    </div>

                    <div class="vl"></div>

                    <div class="col-6 flex-fill text-center">
                        <h5 class="" style="color: rgb(255, 117, 16)"><i class="mdi mdi-clock-time-five-outline ml-1"></i> @Resources.Global.PlanLeaveTime</h5>
                        <p class="text-muted text-big">@DateTime.Now.ToShortDateString()</p>
                        <h2>18:40:06</h2>
                    </div>
                </div>

                <div class="col-12 my-3 text-center">
                    <button class="btn btn-outline-windows ccircle">@Resources.Global.GotoWork</button>
                </div>

                <div class="text-center px-2 my-2">
                    <button class="btn btn-outline-windows btn-block font-weight-bold text-big" onclick="location.href='/'">@Resources.Global.Skip</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundle/Vendor/js/moment/moment")

    <script type="text/javascript">
        $(function () {

            var clock = function() {
                $('#lblClock').html(moment().format('HH:mm:ss'));
            }

            setInterval(clock, 1000);

        });
    </script>
}